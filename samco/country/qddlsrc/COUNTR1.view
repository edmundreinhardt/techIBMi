-- %TEXT Country file
CREATE VIEW COUNTR1 AS
SELECT 
    COID,
    COUNTR,
    COISO
FROM COUNTRY
ORDER BY COUNTR;

LABEL ON TABLE COUNTR1 IS 'Country file by name';
LABEL ON COLUMN COUNTR1.COID IS 'Country ID';
LABEL ON COLUMN COUNTR1.COUNTR IS 'Country Name';
LABEL ON COLUMN COUNTR1.COISO IS 'ISO Country Code';